{
    "name": "fynn-digital/sdk-php",
    "description": "Integrate the fynn subscription billing platform into your application.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/fynn-digital/sdk-php",
    "keywords": [
        "fynn",
        "billing",
        "subscription",
        "payment",
        "api",
        "recurring billing"
    ],
    "autoload": {
        "psr-4": {
            "Fynn\\Sdk\\": "src/",
            "Fynn\\Sdk\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Fynn Developers",
            "email": "sdk@fynn.eu"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "marcocesarato/php-conventional-changelog": "^1.15"
    },
    "scripts": {
        "changelog": "conventional-changelog",
        "release": "conventional-changelog --commit",
        "release:patch": "conventional-changelog --patch --commit",
        "release:minor": "conventional-changelog --minor --commit",
        "release:major": "conventional-changelog --major --commit"
    },
    "version": "0.5.0"
}